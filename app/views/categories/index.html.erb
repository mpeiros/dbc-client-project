<h1>Welcome to DBC Film Reviews</h1>

<h2>All Categories</h2>

<ol>
  <% @categories.each do |category| %>
    <li><%= link_to "#{category.name}", category_path(category) %></li>
    <ul>
      <% category.films.each do |film| %>
        <li><%= link_to "#{film.title}", film_path(film) %></li>
      <% end %>
    </ul>
  <% end %>
</ol>
