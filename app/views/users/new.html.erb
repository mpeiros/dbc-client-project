<h1>Sign Up</h1>

<% if @user.errors.any? %>
  <div>
    <h2>
      <%= pluralize(@user.errors.count, "error") %> encountered
    </h2>
    <ul>
      <%= @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for :user, url: users_path do |f| %>
  <p>
    <%= f.label :username %> <br>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email %> <br>
    <%= f.email_field :email %>
  </p>
  <p>
    <%= f.label :password %> <br>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit "Register" %>
  </p>
<% end %>
